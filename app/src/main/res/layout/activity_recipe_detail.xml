<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/recipeView"
        android:layout_width="match_parent"
        android:layout_height="281dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/recipe_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/title"
        android:textAlignment="center"
        android:textSize="24sp"
        android:typeface="sans" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sus_txt"
            android:layout_width="75dp"
            android:layout_height="24dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="180dp"
            android:text="@string/sustainable"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/sus_img"
            android:layout_width="47dp"
            android:layout_height="52dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="168dp"
            android:contentDescription="@string/sustainable"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toEndOf="@+id/keto_txt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/keto_txt"
            android:layout_width="75dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="182dp"
            android:text="@string/ketogenic"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/keto_img"
            android:layout_width="47dp"
            android:layout_height="52dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="168dp"
            android:contentDescription="@string/ketogenic"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toEndOf="@+id/keto_txt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cheap_txt"
            android:layout_width="75dp"
            android:layout_height="24dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="130dp"
            android:text="@string/affordable"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/cheap_img"
            android:layout_width="47dp"
            android:layout_height="52dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="116dp"
            android:contentDescription="@string/affordable"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toEndOf="@+id/cheap_txt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dairy_txt"
            android:layout_width="75dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="130dp"
            android:text="@string/dairy_free"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dairy_img"
            android:layout_width="47dp"
            android:layout_height="52dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="116dp"
            android:contentDescription="@string/dairy_free"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toEndOf="@+id/dairy_txt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/healthy_txt"
            android:layout_width="68dp"
            android:layout_height="0dp"
            android:layout_marginStart="228dp"
            android:layout_marginTop="80dp"
            android:text="@string/healthy"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/health_img"
            android:layout_width="47dp"
            android:layout_height="52dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="64dp"
            android:contentDescription="@string/healthy"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toEndOf="@+id/healthy_txt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/gluten_txt"
            android:layout_width="88dp"
            android:layout_height="23dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="78dp"
            android:text="@string/gluten_free"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/glut_img"
            android:layout_width="47dp"
            android:layout_height="52dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="64dp"
            android:contentDescription="@string/gluten_free"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toEndOf="@+id/gluten_txt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vegan_txt"
            android:layout_width="68dp"
            android:layout_height="0dp"
            android:layout_marginStart="228dp"
            android:layout_marginTop="28dp"
            android:text="@string/vegan"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/vegan_img"
            android:layout_width="47dp"
            android:layout_height="52dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/vegan"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toEndOf="@+id/vegan_txt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vegetarian_txt"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:text="@string/vegetarian"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/vegt_img"
            android:layout_width="47dp"
            android:layout_height="52dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/vegetarian"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toEndOf="@+id/vegetarian_txt"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ingredient_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


    </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/recipe_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/title_activity_recipe"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:layout_editor_absoluteY="220dp" />
    </LinearLayout>
</ScrollView>